<!DOCTYPE html>
<html>

<head>
    <title>Product List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .category-tag {
            display: inline-block;
            background: #e9ecef;
            border-radius: 20px;
            padding: 2px 10px;
            font-size: 0.85rem;
            margin-right: 5px;
        }
    </style>
</head>

<body class="p-4">
    <div class="container">
        <h2>Product List</h2>
        <% if (success && success.length> 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>


                <a href="/products/create" class="btn btn-primary mb-3">+ Add Product</a>

                <form method="GET" action="/products" class="row g-3 mb-3">
                    <div class="col-md-4">
                        <input type="text" name="search" placeholder="Search by name" value="<%= search %>"
                            class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <select name="categories" class="form-select" multiple>
                            <% allCategories.forEach(cat=> { %>
                                <option value="<%= cat._id %>" <%=selectedCategories.includes(cat._id.toString())
                                    ? 'selected' : '' %>>
                                    <%= cat.name %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-success">üîç Filter</button>
                        <a href="/products" class="btn btn-secondary">Reset</a>
                    </div>
                </form>


                <% if (products.length===0) { %>
                    <div class="alert alert-warning">No products available.</div>
                    <% } else { %>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Quantity</th>
                                    <th>Categories</th>
                                    <th>Added On</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% products.forEach(product=> { %>
                                    <tr>
                                        <td>
                                            <%= product.name %>
                                        </td>
                                        <td>
                                            <%= product.quantity %>
                                        </td>
                                        <td>
                                            <% product.categories.forEach(cat=> { %>
                                                <span class="category-tag">
                                                    <%= cat.name %>
                                                </span>
                                                <% }) %>
                                        </td>
                                        <td>
                                            <%= new Date(product.createdAt).toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <form method="POST" action="/products/<%= product._id %>/delete"
                                                onsubmit="return confirm('Delete this product?');">
                                                <button class="btn btn-sm btn-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>

                        <!-- Pagination -->
                        <nav>
                            <ul class="pagination">
                                <% for (let i=1; i <=totalPages; i++) { %>
                                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                        <a class="page-link"
                                            href="/products?page=<%= i %><% if (search) { %>&search=<%= search %><% } %><% selectedCategories.forEach(cat => { %>&categories=<%= cat %><% }) %>">
                                            <%= i %>
                                        </a>
                                    </li>
                                    <% } %>
                            </ul>

                        </nav>
                        <% } %>
    </div>
</body>

</html>